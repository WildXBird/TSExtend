{
  "compilerOptions": {
    "noEmitOnError": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny":true,
    "noImplicitThis":true,
    "strictNullChecks":true,
    "strictPropertyInitialization":true,
    "strictBindCallApply":true,
    "strictFunctionTypes":true,
    "outDir": "./dist",
  },
  "include": [
    "./main.d.ts",
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
